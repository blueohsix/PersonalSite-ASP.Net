@page
@model PersonalSite_ASP.Pages.Blog.CreateModel

@{
    Layout = "~/Pages/Shared/_BlogLayout.cshtml";
    ViewData["Title"] = "Create";
}


<div class="w3-container w3-margin-top">
        <div class="row">
            <span>
                <a class="w3-button w3-white w3-right" asp-page="./AllPosts">Back to All</a>
            </span>
            <form method="post">
                <span>
                    <input type="submit" value="Create" class="w3-button w3-blue w3-right" />
                </span>
                <div asp-validation-summary="ModelOnly" class=""></div>
                <div class="form-group">
                    <label asp-for="Post.Title" class="control-label"></label>
                    <input asp-for="Post.Title" class="form-control" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea wrap="soft" cols="110" rows="20" asp-for="Post.Body" class="form-control"></textarea>
                    <span asp-validation-for="Post.Body" class="text-danger"></span>
                </div>

            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
