@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div>
    <div class="w3-display-middle">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="w3-text-red"></div>
                <table class="w3-table w3-border">
                    <tr>
                        <td>
                            <label asp-for="Input.Email">Username</label>
                        </td>
                        <td>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="w3-text-red"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Input.Password"></label>
                        </td>
                        <td>
                            <input asp-for="Input.Password" />
                            <span asp-validation-for="Input.Password" class="w3-text-red"></span>
                        </td>
                    </tr>
                </table>
                <div class="w3-center w3-padding">
                    <button type="submit" class="w3-button w3-blue">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
